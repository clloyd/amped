{
    "name": "Amped - Detect AMP Pages",
    "description": "Detect AMP Pages and switch",
    "version": "1.2",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
    ],
    "page_action": {
          "default_icon": {
            "38": "images/icon38.png"
          },
          "default_title": "AMP Enabled"
    },
    "manifest_version": 2
}
